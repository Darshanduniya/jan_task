def dar(path):
    # Initialize model_name variable
    model_name = ""

    # Open the file in read mode
    with open(path, 'r') as file:
        # Read the lines from the file
        lines = file.readlines()

        # Iterate over the lines to find model_name
        for line in lines:
            if line.startswith("model_name"):
                model_name = line.strip().split(': ')[1]
                break

    # Check if model_name is populated
    if model_name:
        # Construct the path using model_name
        result_path = "/asrepos/{}_C/{}".format(model_name, model_name)

        return result_path
    else:
        return "model_name not found in the file."

# Example usage:
file_path = "/data/duniya/darshan.txt"
print("path is :", dar(file_path))
